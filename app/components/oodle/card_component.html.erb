<%= turbo_frame_tag @id do %>
  <div class="max-w-md mx-auto bg-white shadow-lg rounded-lg overflow-hidden">
    <div class="p-6">
      <% if @title.present? %>
        <h2 class="text-xl font-semibold text-gray-800 mb-4">
          <%= @title %>
        </h2>
      <% end %>
      
      <div class="text-gray-700">
        <%= content %>
      </div>
    </div>
  </div>
<% end %>

